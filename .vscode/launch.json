  "version": "1.0.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "bitmark parse --stage=lex ./fixtures/test.bitmark",
      "cwd": "${workspaceFolder}",
      "cargo": {
        "args": [
          "build",
          "--manifest-path",
          "${workspaceFolder}/Cargo.toml",
          "--bin",
          "bitmark"
        ]
      },
      "args": ["parse", "--stage=lex", "./fixtures/test.bitmark"],
      "sourceLanguages": ["rust"]
    }
  ]
}
